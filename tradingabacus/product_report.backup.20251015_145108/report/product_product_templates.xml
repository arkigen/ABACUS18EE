<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="paperformat_label_sheet_dymo" model="report.paperformat">
        <field name="name">Dymo Label Sheet</field>
        <field name="page_width">40</field>
        <field name="page_height">57</field>
        <field name="format">custom</field>
    </record>

    <template id="report_simple_label_dymo_inherit" inherit_id="product.report_simple_label_dymo">
        <xpath expr="//div/div[hasclass('o_label_name')]" position="replace">
            <t t-if="product">
                <div class="o_label_name" style="max-height:45px;background-color: transparent; font-size:15px;line-height:14px;">
                    <span t-if="product.is_product_variant" t-esc="product.display_name"/>
                    <span t-else="" t-esc="product.name"/>
                </div>
                <div class="o_label_name" style="margin-top:5px;max-height:45px;background-color: transparent; font-size:15px;line-height:14px;">
                    <span t-if="product.is_product_variant" t-esc="product.with_context({'lang': 'zh_CN'}).display_name"/>
                    <t t-if="'report_name_zh_cn' in product">
                        <span t-esc="product.with_context({'lang': 'zh_CN'}).name"/>
                    </t>
                </div>
            </t>
        </xpath>

        <xpath expr="//div[hasclass('o_label_small_barcode')]" position="replace">
            <t t-if="product">
                <t t-if="barcode">
                    <!-- `quiet=0` to remove the left and right margins on the barcode -->
                    <div t-out="barcode" style="padding:0; margin-left:15px;" t-options="{'widget': 'barcode', 'quiet': 0, 'symbology': 'auto', 'img_style': barcode_size}"/>
                    <div class="o_label_name" style="line-height: 130%;height:2.0em;background-color: transparent;margin-top:-4px;">
                        <center>
                            <small t-out="barcode" style="font-size:12px;"/>
                        </center>
                    </div>
                </t>
            </t>
        </xpath>
    </template>

    <template id="report_simple_label2x7_inherit" inherit_id="product.report_simple_label2x7">
        <!-- Mostrar el nombre del producto en inglés y chino -->
        <xpath expr="//div/div[hasclass('o_label_name')]" position="replace">
            <t t-if="product">
                <div class="o_label_name" style="line-height:95%; font-size:11px; height:auto; max-height:30px; overflow-wrap: break-word;">
                    <strong t-esc="product.display_name"/>
                </div>
                <div class="o_label_name" style="line-height:95%; font-size:11px; height:auto; max-height:30px; overflow-wrap: break-word;">
                    <strong t-esc="product.with_context({'lang': 'zh_CN'}).display_name"/>
                </div>
            </t>
        </xpath>
    
        <!-- Mostrar el código de barras centrado -->
        <xpath expr="//span[hasclass('text-center')]" position="replace">
            <t t-if="product">
                <t t-if="barcode">
                    <small class="text-center" style="margin-top:-2px;" t-out="barcode"/>
                </t>
            </t>
        </xpath>
    
        <!-- Mostrar el código del producto y el código de barras -->
        <xpath expr="//div/div[hasclass('o_label_left_column')]" position="replace">
            <div class="text-center o_label_left_column" style="margin-top:-5px;">
                <span class="text-nowrap" t-field="product.default_code"/>
                <t t-if="barcode">
                    <div t-out="barcode" t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                    <span class="text-center" t-out="barcode"/>
                </t>
            </div>
        </xpath>
    
        <!-- Mostrar el precio del producto -->
        <xpath expr="//div/div/strong[hasclass('o_label_price')]" position="replace">
            <t t-if="product">
                <t t-if="'report_sale_price' in product">
                    <strong class="o_label_price" t-field="product.report_sale_price" t-options="{'widget': 'monetary', 'label_price': True}"/>
                </t>
                <t t-else="">
                    <strong class="o_label_price" t-field="product.list_price" t-options="{'widget': 'monetary', 'label_price': True}"/>
                </t>
            </t>
        </xpath>
    </template>
    

    <template id="report_simple_label4x7_inherit" inherit_id="product.report_simple_label4x7">
        <xpath expr="//t[@t-set='table_style']" position="replace">
            <t t-set="table_style" t-value="'width:43mm;height:43mm;' + table_style"/>
        </xpath>

        <xpath expr="//div/div[hasclass('o_label_name')]" position="replace">
            <t t-if="product">
                <div class="o_label_name" style="line-height:90%; font-size:12px!important; max-height:50px; height:auto;">
                    <strong t-field="product.display_name"/>
                </div>
                <div class="o_label_name" style=" line-height:90%; font-size:12px!important; font-size:110%px; height:auto; max-height:30px; overflow-wrap: break-word;">
                    <strong t-esc="product.with_context({'lang': 'zh_CN'}).display_name"/>
                </div>
            </t>
        </xpath>

        <xpath expr="//div/div[hasclass('o_label_small_barcode')]" position="replace">
            <t t-if="product">
                <center>
                    <div class="o_label_small_barcode" style="margin-top:-40px;">
                        <span class="text-nowrap" t-field="product.default_code"/>
                        <t t-if="barcode">
                            <div t-out="barcode" style="padding:0" t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                            <span class="text-center" t-out="barcode"/>
                        </t>
                    </div>
                </center>
            </t>
        </xpath>
    </template>
    
    <template id="report_simple_label4x12_inherit" inherit_id="product.report_simple_label4x12">
        <xpath expr="//t[@t-set='table_style']" position="replace">
            <t t-set="table_style" t-value="'width:45mm;height:37mm;' + table_style"/>
        </xpath>
        <xpath expr="//div/div[hasclass('o_label_name')]" position="replace">
            <t t-if="product">
                <div class="o_label_name" style="line-height:90%; font-size:12px!important; max-height:50px; height:auto;">
                    <strong t-field="product.display_name"/>
                </div>
                <div class="o_label_name" style=" line-height:90%; font-size:12px !important; height:auto; max-height:30px; overflow-wrap: break-word;">
                    <strong t-esc="product.with_context({'lang': 'zh_CN'}).display_name"/>
                </div>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('o_label_price_medium')]" position="replace">
            <div class="text-right" style="padding: 0 4px;z-index:100;position:relative; margin-left:5px; font-size:20px!important; margin-top:15px;">
                <t t-if="'report_sale_price' in product">
                    <strong stryle="font-size:18px!important;" t-field="product.report_sale_price" t-options="{'widget': 'monetary', 'label_price': True}"/>
                </t>
                <t t-else="">
                    <strong stryle="font-size:18px!important;" t-field="product.list_price" t-options="{'widget': 'monetary', 'label_price': True}"/>
                </t>
&gt;
                <div class="o_label_extra_data">
                    <t t-out="extra_html"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('o_label_small_barcode')]" position="replace">
            <t t-if="product">
                <t t-if="price_included">
                    <center>
                        <div style="margin-top:-50px; margin-left:25px" class="text-center o_label_small_barcode">
                            <t t-if="barcode">
                                <div t-out="barcode" style="padding:0;margin-left:-30px;" t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                                <span class="text-center" t-out="barcode" style="margin-left:-28px;"/>
                            </t>
                        </div>
                    </center>
                </t>
                <t t-else="">
                    <center>
                        <div style="margin-top:-50px; margin-left:25px" class="text-center o_label_small_barcode">
                            <t t-if="barcode">
                                <div t-out="barcode" style="padding:0;margin-left:-30px;" t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                                <span class="text-center" t-out="barcode" style="margin-left:-28px;"/>
                            </t>
                        </div>
                    </center>
                </t>
            </t>
        </xpath>
    </template>
</odoo>