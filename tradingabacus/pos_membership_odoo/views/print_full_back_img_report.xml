<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_pos_membership_card_full_back_image">
			<t t-call="web.basic_layout">
				<t t-foreach="docs" t-as="o">

					<t t-if="o.membership_template">

						<!-- Back Side -->
						<div class="page">
 							<t t-if="o.membership_template.card_back_image">
								<div style="height:400;width:300px;margin:auto;" >
									<div class="row" >
										<div class="img img-responsive" style="position:absolute;height:400;width:300px;margin:auto;">
											<img  t-att-src="image_data_uri(o.membership_template.card_back_image)" t-attf-style="border-radius: 15px;display:block;width: #{o.membership_template.label_width or '100'}% ;  height: #{o.membership_template.label_hight or '100'}px ;"/>

										</div>
										<div t-attf-style="position:relative; width:100%;margin-top: #{o.barcode_margin_top}px;width:100%;" >
											<div t-if="o.membership_code" t-field="o.membership_code" t-options="{'widget': 'barcode', 'width': 300, 'height': 30, 'img_style': 'max-height:50pt;max-width:100%;', 'img_align': 'center'}" t-attf-style="margin-top: 15%;width: 100%;  height: 30px ;" alt="Barcode Image"/>


											<div style="font-size:12px;text-align:center;color: black;background:white;width:100%;">
												<span t-esc="o.hide_barcode"  />
											</div>
										</div>
									</div>
							  	</div>
							</t>

							<t t-if="not o.membership_template.card_back_image">
								<div style="height:400;width:300px;margin:auto;" >
									<div class="row">
										<div class="img img-responsive" >
											<img src="/pos_membership_odoo/static/src/img/comman.jpg" t-attf-style="border-radius: 15px;display:block;width: #{o.membership_template.label_width or '100'}% ;  height: #{o.membership_template.label_hight or '100'}px ;"/>
										</div>
									</div>
									<div class="row"  style="margin:auto;">
										<div t-if="o.membership_code" t-field="o.membership_code" t-options="{'widget': 'barcode', 'width': 300, 'height': 50, 'img_style': 'max-height:50pt;max-width:100%;', 'img_align': 'center'}" t-attf-style="margin-top: 20px;width: #{o.membership_template.barcode_width or '300'}px ;  height: #{o.membership_template.barcode_hight or '70'}px ;" alt="Barcode Image"/>
									</div>
									<span t-esc="o.hide_barcode" style="font-size:12px;text-align:center;;margin-left:40%;color: black;" />
								</div>

							</t>

						</div>
					</t>

					<t t-if="not o.membership_template">

						<div class="page">
							<div class="row" style="height:204px;width:325px;">
								<div class="img img-responsive">
									<img src="/pos_membership_odoo/static/src/img/comman.jpg" style="width:100%;border-radius: 15px;"/>
								</div>
								<div class="col-md-12 ml8" style="position:absolute;width:50%;top:10px;">
									<div class="col-sm-12" style="position:absolute;width:50%;left:10px;top:5px;">
										<img src="/pos_membership_odoo/static/src/img/vip.png" style="width:100%;"/>
									</div>
									<br/>
									<div class="owner_name" style="position:absolute;width:50%;top:20px;font-size:10px;right:0;">
										<label style="color:white !important;">Your name </label>
										<br/>
										<input type="text" style="background:white !important;"/>
									</div>
								</div>
								
							</div>
						</div>
					</t>

					<p style="page-break-after:always"></p>
				</t>
			</t>
		</template>

		<record id="full_back_img_paper_format" model="report.paperformat">
			<field name="name">Membership card full back image</field>
			<field name="default" eval="True" />
			<field name="format">custom</field>
			<field name="page_height">100</field>
			<field name="page_width">100</field>
			<field name="margin_top">10</field>
			<field name="margin_bottom">0</field>
			<field name="margin_left">10</field>
			<field name="margin_right">5</field>
			<field name="header_line" eval="False" />
			<field name="orientation">Portrait</field>
			<field name="header_spacing">0</field>
			<field name="dpi">80</field>
		</record>



		<record id="pos_membership_odoo.action_membership_card_full_back_img" model="ir.actions.report">
			<field name="name">Membership Card Full Back Image</field>
			<field name="model">pos.membership.full.back.image</field>
			<field name="binding_model_id" ref="model_pos_membership"/>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">pos_membership_odoo.report_pos_membership_card_full_back_image</field>
			<field name="report_file">pos_membership_odoo.report_pos_membership_card_full_back_image</field>
			<field name="print_report_name">'Membership Full Back Image'</field>
			<field name="binding_type">report</field>
			<field name="paperformat_id" ref="pos_membership_odoo.full_back_img_paper_format"/>
			<field name="binding_model_id" eval="False"/>
		</record>

	</data>
</odoo>
