<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">


	<t t-name="BiPaymentScreenButtons" t-inherit="point_of_sale.PaymentScreenButtons" t-inherit-mode="extension" owl="1">
		<xpath expr="//div[hasclass('payment-buttons')]" position="inside">

			<button class="button memberShip-button btn btn-light py-3 text-start rounded-0 border-bottom"  
                t-on-click="selectMemberShip">
                <i class="fa fa-pencil"></i>
                <span> Use MemberShip</span> 
            </button>
		</xpath>
	</t>

	<t t-name="BiPaymentScreenStatus" t-inherit="point_of_sale.PaymentScreenStatus" t-inherit-mode="extension" owl="1">
		<xpath expr="//div[hasclass('message')]" position="after">
			<div class='membershipmessage' style="color: #0075AC; text-align: center; font-size: 18px;">
			</div>
		</xpath>
	</t>
	
