<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sh_pos_manager_validation.passwordPopup">
            <div class="popup popup-barcode">
                <div class="modal-header"><h4 class="modal-title title"> Enter Password </h4></div>
                <main class="modal-body">
                    <div>
                        <input type="password" class="form-control" id="password" name='password' autofocus="autofocus"  placeholder="Enter Password" t-on-focus="() => this.open_keyboard()"></input>
                    </div>
                </main>
                <div class="footer modal-footer">
                    <div class="button cancel btn btn-lg btn-primary " t-on-click="confirm">
                        Confirm
                    </div>
                    <div class="button cancel btn btn-lg btn-secondary " t-on-click="cancel">
                        Cancel
                    </div>
                </div>
                <OnScreenKeyBoard />
            </div>
    </t>      

</templates>
