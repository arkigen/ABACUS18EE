<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_res_user_form" model="ir.ui.view" >
        <field name="name">sh.res.users.form.data</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="point_of_sale" string="Point Of Sale">
                    <group>
                        <field name="sh_barcode" password="True"></field>
                        <field name="sh_password" password="True"></field>
                        <field name="sh_pin" password="True"></field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
