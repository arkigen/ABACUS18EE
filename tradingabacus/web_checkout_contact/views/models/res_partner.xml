<odoo>
    <data>
        <record id="view_partners_inherit" model="ir.ui.view">
            <field name="name">invoice partner extra fields</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority">1000</field>
            <field name="arch" type="xml">
                <field name="municipality_id" position="before">
                    <field name="_state_id"/>
                </field>
                <field name="vat" position="after">
                    <field name="verification_code"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
